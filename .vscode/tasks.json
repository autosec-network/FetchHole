{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "TS Build",
			"dependsOn": ["build:esm"],
			"isBackground": true,
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "build:esm",
			"detail": "tsc --watch -p tsconfig.esm.json",
			"type": "npm",
			"script": "build:esm:watch",
			"presentation": {
				"group": "build"
			},
			"problemMatcher": "$tsc-watch",
			"isBackground": true
		},
		{
			"label": "TS Test",
			"dependsOn": ["doh", "fetch", "memoryCache"],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"isBackground": true
		},
		{
			"label": "doh",
			"type": "npm",
			"script": "test -- --watch ./test/doh.test.mts",
			"isBackground": true,
			"group": {
				"kind": "test"
			},
			"presentation": {
				"group": "test"
			}
		},
		{
			"label": "fetch",
			"type": "npm",
			"script": "test -- --watch ./test/fetch.test.mts",
			"isBackground": true,
			"group": {
				"kind": "test"
			},
			"presentation": {
				"group": "test"
			}
		},
		{
			"label": "memoryCache",
			"type": "npm",
			"script": "test -- --watch ./test/memoryCache.test.mts",
			"isBackground": true,
			"group": {
				"kind": "test"
			},
			"presentation": {
				"group": "test"
			}
		}
	]
}
